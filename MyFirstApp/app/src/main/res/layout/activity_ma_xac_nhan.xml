<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundtest"
    tools:context=".timkiemkhachsan.maXacNhan">
    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="102dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bieutuong"
        tools:layout_editor_absoluteX="27dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/booking_room"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#ffd700"
        android:textColorHighlight="#FFFFFF"
        android:textSize="30sp"
        android:fontFamily="@font/dancing_script_bold"
        app:layout_constraintHorizontal_bias="0.57"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line_2"
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:layout_height="2dp"
        android:background="#787777"
        app:layout_constraintTop_toTopOf="@+id/text" />

    <View
        android:id="@+id/line_1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#131313"
        app:layout_constraintTop_toTopOf="@+id/text" />

    <FrameLayout
        android:id="@+id/text"
        android:layout_width="415dp"
        android:layout_height="match_parent"
        android:layout_marginTop="62dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/backgroundchinh"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.450">

        <Button
            android:id="@+id/bt1"
            android:layout_width="95dp"
            android:layout_marginTop="330dp"
            android:layout_marginLeft="220dp"
            android:layout_height="33dp"
            android:background="@drawable/backgroundchinh"
            android:text="Gửi lại mã"
            android:textAllCaps="false"
            android:textColor="#189cea"
            android:textStyle="italic" />
    </FrameLayout>

    <Button
        android:id="@+id/btTieptuc2"
        android:layout_width="90dp"
        android:layout_height="39dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:background="@drawable/bobutton"
        android:text="Tiếp tục"
        android:textAllCaps="false"
        android:textColor="#e5f3fd"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.903"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text"
        app:layout_constraintVertical_bias="0.829" />

    <Button
        android:id="@+id/btHuy"
        android:layout_width="90dp"
        android:layout_height="39dp"
        android:layout_marginEnd="292dp"
        android:layout_marginRight="28dp"
        android:background="@drawable/cancelbuton"
        android:text="Hủy"
        android:textAllCaps="false"
        android:textColor="#e5f3fd"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.903"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text"
        app:layout_constraintVertical_bias="0.829" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="223dp"
        android:layout_height="104dp"
        android:text="Chúng tôi vừa gửi mã xác nhận bảo mật tới email bạn cung cấp"
        android:textStyle="italic|bold"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text"
        app:layout_constraintVertical_bias="0.15" />

    <EditText
        android:id="@+id/txtKhachsan"
        android:layout_width="252dp"
        android:layout_height="107dp"

        android:background="@drawable/inputtest"
        android:gravity="center"
        android:inputType="number"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.553"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text"
        app:layout_constraintVertical_bias="0.354" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="163dp"
        android:layout_height="47dp"
        android:text="Không nhận được mã?"
        android:textStyle="italic|bold"
        app:layout_constraintBottom_toBottomOf="@+id/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.306"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text"
        app:layout_constraintVertical_bias="0.621" />


</androidx.constraintlayout.widget.ConstraintLayout>