<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.learnadroid.myfirstapp.home.MainActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    >


    </androidx.viewpager.widget.ViewPager>





    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_main"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        app:tabIndicatorColor="@android:color/holo_orange_light"
        app:tabMode="fixed"
        app:tabIndicatorAnimationDuration="@android:integer/config_shortAnimTime"
        />

    <LinearLayout
        android:background="@android:drawable/dialog_holo_light_frame"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"

        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageButtonFindeCI"
            android:layout_width="137dp"
            android:layout_height="match_parent"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:src="@drawable/ic_findroom4_foreground" />

        <ImageView
            android:id="@+id/imageButtonOrderCI"
            android:layout_width="137dp"
            android:layout_height="match_parent"
            android:scaleX="1.5"
            android:scaleY="1.5"
            app:srcCompat="@drawable/ic_order_foreground" />


        <ImageView
            android:id="@+id/imageButtonAccountCI"
            android:layout_width="137dp"
            android:layout_height="match_parent"
            android:scaleX="1.5"
            android:scaleY="1.5"
            app:srcCompat="@drawable/ic_profile_foreground" />
    </LinearLayout>


</RelativeLayout>
