<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dangnhap.Login">

    <RelativeLayout
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:background="#05848d"

        >

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_marginLeft="50dp"
            android:id="@+id/image_logo"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/bieutuong"
            android:paddingRight="8dp"
            android:layout_marginStart="80dp"/>

        <TextView
            android:id="@+id/text_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/image_logo"
            android:text="Booking room"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#ffd700"
            android:textColorHighlight="#FFFFFF"
            android:textSize="40dp"
            android:fontFamily="@font/dancing_script_bold"
            />
    </RelativeLayout>


    <LinearLayout
        android:layout_below="@+id/logo"
        android:id="@+id/form_Signin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgroundchinh"
        android:gravity="center|top"
        android:orientation="vertical">

        <View
            android:id="@+id/line_1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#4D131313"
            app:layout_constraintTop_toTopOf="@+id/logo"
            />
        <View
            android:id="@+id/line_2"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#66787777"
            app:layout_constraintTop_toTopOf="@+id/logo"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="serif"
            android:textStyle="bold|italic"
            android:text="Đăng Nhập"
            android:textAlignment="center"
            android:textColor="#592A06"
            android:textSize="30dp"
            />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:text="Tài Khoản"
            android:textSize="22dp"
            android:fontFamily="serif"
            android:textStyle="bold|italic"
            android:textColor="#592A06"/>

        <EditText
            android:id="@+id/et_afp_email"

            android:layout_width="361dp"
            android:layout_height="44dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/inputtest"
            android:hint="Tài khoản"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:textSize="18dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="15dp"
            android:text="Mật khẩu"
            android:textSize="22dp"
            android:fontFamily="serif"
            android:textStyle="bold|italic"
            android:textColor="#592A06"
            />

        <EditText
            android:id="@+id/et_afp_password"
            android:layout_width="361dp"
            android:layout_height="44dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="25dp"
            android:inputType="textPassword"
            android:background="@drawable/inputtest"
            android:hint="Mật khẩu"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:textSize="17sp" />

        <Button
            android:id="@+id/bt_afp"
            android:background="@drawable/bobutton"
            android:layout_width="361dp"
            android:layout_height="44dp"
            android:layout_margin="22dp"
            android:gravity="center"
            android:stateListAnimator="@null"
            android:text="Đăng nhập"
            android:textColor="#ffff"
            android:textAllCaps="false"
            android:textStyle="bold|italic"
            android:textSize="25dp"


            />

        <!--        <View-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="2dp"-->
        <!--            android:layout_margin="25dp"-->
        <!--            android:background="@color/cardview_dark_background" />color-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="87dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fab_margin"
                android:text="Bạn chưa có tài khoản? "
                android:textSize="20dp" />
            <TextView
                android:id="@+id/signup_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng ký"
                android:textSize="20dp"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:textColor="#592A06"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>